<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="@drawable/sing_back"
tools:context=".SignUpActivity">

<TextView
    android:id="@+id/textView"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Create Account"
    android:textColor="@color/teal_200"
    android:textSize="26sp"
    android:textStyle="bold"
    android:layout_marginStart="20dp"
    android:layout_marginTop="60dp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent" />

<EditText
    android:id="@+id/sinName"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginStart="20dp"
    android:layout_marginTop="120dp"
    android:layout_marginEnd="20dp"
    android:background="@drawable/edit_back"
    android:hint="Enter Name"
    android:minHeight="55dp"
    android:inputType="textMultiLine"
    android:paddingStart="20dp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/textView" />

<EditText
    android:id="@+id/sinEmail"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginStart="20dp"
    android:layout_marginTop="30dp"
    android:layout_marginEnd="20dp"
    android:background="@drawable/edit_back"
    android:hint="Enter Email"
    android:inputType="textEmailAddress"
    android:minHeight="55dp"
    android:paddingStart="20dp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/sinName" />

<EditText
    android:id="@+id/sinPass"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginStart="20dp"
    android:layout_marginTop="30dp"
    android:layout_marginEnd="20dp"
    android:background="@drawable/edit_back"
    android:hint="Enter Password"
    android:inputType="textPassword"
    android:minHeight="55dp"
    android:paddingStart="20dp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/sinEmail" />

<ImageButton
    android:id="@+id/iBSignUp"
    android:layout_width="50dp"
    android:layout_height="50dp"
    android:layout_marginTop="30dp"
    android:background="@drawable/edit_back"
    android:src="@drawable/round_arrow_right_alt_24"
    app:layout_constraintEnd_toEndOf="@+id/sinPass"
    app:layout_constraintStart_toStartOf="@+id/sinPass"
    app:layout_constraintTop_toBottomOf="@+id/sinPass" />

<TextView
    android:id="@+id/textView2"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="10dp"
    android:text="Already have an account"
    android:textColor="@color/teal_200"
    android:textStyle="bold"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/iBSignUp" />

<TextView
    android:id="@+id/goLogin"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Login"
    android:layout_marginStart="20dp"
    android:textStyle="bold"
    android:textSize="22sp"
    android:textColor="@color/purple_200"
    app:layout_constraintBottom_toBottomOf="@+id/textView2"
    app:layout_constraintStart_toEndOf="@+id/textView2"
    app:layout_constraintTop_toTopOf="@+id/textView2" />


</androidx.constraintlayout.widget.ConstraintLayout>