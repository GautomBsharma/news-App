<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="7dp"
    app:cardCornerRadius="5dp"
    app:cardElevation="4dp"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >


    <ImageView
        android:id="@+id/jobImg"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_margin="6dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/job_hint" />

    <TextView
        android:id="@+id/jobTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:layout_marginTop="3dp"
        android:layout_marginStart="6dp"
        android:layout_marginEnd="6dp"
        android:textStyle="bold"
        android:textSize="16sp"
        android:maxLines="1"
        android:textColor="@color/time_back"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/jobImg"
        app:layout_constraintTop_toTopOf="@+id/jobImg" />

    <TextView
        android:id="@+id/jobDes"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:padding="5dp"
        android:textColor="@color/jobtext"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/jobTitle"
        app:layout_constraintStart_toStartOf="@+id/jobImg"
        app:layout_constraintTop_toBottomOf="@+id/jobImg" />

    <ImageButton
        android:id="@+id/readJob"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_margin="6dp"
        app:layout_constraintBottom_toBottomOf="@+id/jobDes"
        app:layout_constraintEnd_toEndOf="@+id/jobDes"
        android:background="@android:color/transparent"
        app:srcCompat="@drawable/round_arrow_forward_ios_24"
        app:tint="@color/teal_200" />

        <TextView
            android:id="@+id/tvProvider"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="TextView"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="@+id/jobTitle"
            app:layout_constraintStart_toStartOf="@+id/jobTitle"
            app:layout_constraintTop_toBottomOf="@+id/jobTitle" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>