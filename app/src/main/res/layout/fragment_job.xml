<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.JobFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="95dp"
        android:background="@color/time_back"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <EditText
            android:id="@+id/searchGro"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/search_back"
            android:drawableStart="@drawable/round_search_24"
            android:hint="Search ...."
            android:inputType="textFilter"
            android:paddingStart="15dp"
            android:layout_marginBottom="6dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:queryHint="Search Groups" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.facebook.shimmer.ShimmerFrameLayout
        android:id="@+id/shimmerFrameLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="visible"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <androidx.cardview.widget.CardView
                android:id="@+id/cardView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                app:cardCornerRadius="5dp"
                app:cardElevation="4dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">


                    <ImageView
                        android:id="@+id/jobImg1"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_margin="6dp"
                        android:background="@drawable/shimmer_background"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/jobTitle1"
                        android:layout_width="0dp"
                        android:layout_height="35dp"
                        android:layout_marginStart="6dp"
                        android:layout_marginTop="3dp"
                        android:layout_marginEnd="6dp"
                        android:background="@drawable/shimmer_background"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/jobImg1"
                        app:layout_constraintTop_toTopOf="@+id/jobImg1" />

                    <TextView
                        android:id="@+id/jobDes1"
                        android:layout_width="0dp"
                        android:layout_height="90dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="8dp"
                        android:background="@drawable/shimmer_background"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="@+id/jobTitle1"
                        app:layout_constraintStart_toStartOf="@+id/jobImg1"
                        app:layout_constraintTop_toBottomOf="@+id/jobImg1" />

                    <ImageButton
                        android:id="@+id/readJob1"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_margin="6dp"
                        android:background="@drawable/shimmer_background"
                        app:layout_constraintBottom_toBottomOf="@+id/jobDes1"
                        app:layout_constraintEnd_toEndOf="@+id/jobDes1" />

                    <TextView
                        android:id="@+id/tvProvider1"
                        android:layout_width="0dp"
                        android:layout_height="30dp"
                        android:layout_marginTop="4dp"
                        android:background="@drawable/shimmer_background"
                        app:layout_constraintEnd_toEndOf="@+id/jobTitle1"
                        app:layout_constraintStart_toStartOf="@+id/jobTitle1"
                        app:layout_constraintTop_toBottomOf="@+id/jobTitle1" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                app:cardCornerRadius="5dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                app:cardElevation="4dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cardView5">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">


                    <ImageView
                        android:id="@+id/jobImg"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_margin="6dp"
                        android:background="@drawable/shimmer_background"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/jobTitle"
                        android:layout_width="0dp"
                        android:layout_height="35dp"
                        android:layout_marginStart="6dp"
                        android:layout_marginTop="3dp"
                        android:layout_marginEnd="6dp"
                        android:background="@drawable/shimmer_background"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/jobImg"
                        app:layout_constraintTop_toTopOf="@+id/jobImg" />

                    <TextView
                        android:id="@+id/jobDes"
                        android:layout_width="0dp"
                        android:layout_height="90dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="8dp"
                        android:background="@drawable/shimmer_background"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="@+id/jobTitle"
                        app:layout_constraintStart_toStartOf="@+id/jobImg"
                        app:layout_constraintTop_toBottomOf="@+id/jobImg" />

                    <ImageButton
                        android:id="@+id/readJob"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_margin="6dp"
                        android:background="@drawable/shimmer_background"
                        app:layout_constraintBottom_toBottomOf="@+id/jobDes"
                        app:layout_constraintEnd_toEndOf="@+id/jobDes" />

                    <TextView
                        android:id="@+id/tvProvider"
                        android:layout_width="0dp"
                        android:layout_height="30dp"
                        android:layout_marginTop="4dp"
                        android:background="@drawable/shimmer_background"
                        app:layout_constraintEnd_toEndOf="@+id/jobTitle"
                        app:layout_constraintStart_toStartOf="@+id/jobTitle"
                        app:layout_constraintTop_toBottomOf="@+id/jobTitle" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>

             <androidx.cardview.widget.CardView
                android:id="@+id/cardView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="12dp"
                app:cardCornerRadius="5dp"

                app:cardElevation="4dp"
                app:layout_constraintTop_toBottomOf="@+id/cardView4"
                tools:layout_editor_absoluteX="7dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">


                    <ImageView
                        android:id="@+id/jobImg2"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_margin="6dp"
                        android:background="@drawable/shimmer_background"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/jobTitle2"
                        android:layout_width="0dp"
                        android:layout_height="35dp"
                        android:layout_marginStart="6dp"
                        android:layout_marginTop="3dp"
                        android:layout_marginEnd="6dp"
                        android:background="@drawable/shimmer_background"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/jobImg2"
                        app:layout_constraintTop_toTopOf="@+id/jobImg2" />

                    <TextView
                        android:id="@+id/jobDes2"
                        android:layout_width="0dp"
                        android:layout_height="90dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="8dp"
                        android:background="@drawable/shimmer_background"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="@+id/jobTitle2"
                        app:layout_constraintStart_toStartOf="@+id/jobImg2"
                        app:layout_constraintTop_toBottomOf="@+id/jobImg2" />

                    <ImageButton
                        android:id="@+id/readJob2"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_margin="6dp"
                        android:background="@drawable/shimmer_background"
                        app:layout_constraintBottom_toBottomOf="@+id/jobDes2"
                        app:layout_constraintEnd_toEndOf="@+id/jobDes2" />

                    <TextView
                        android:id="@+id/tvProvider2"
                        android:layout_width="0dp"
                        android:layout_height="30dp"
                        android:layout_marginTop="4dp"
                        android:background="@drawable/shimmer_background"
                        app:layout_constraintEnd_toEndOf="@+id/jobTitle2"
                        app:layout_constraintStart_toStartOf="@+id/jobTitle2"
                        app:layout_constraintTop_toBottomOf="@+id/jobTitle2" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>




        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.facebook.shimmer.ShimmerFrameLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewJob"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout"
        tools:listitem="@layout/job_item" />



</androidx.constraintlayout.widget.ConstraintLayout>